@model IReadOnlyCollection<CategoryModel>
@{
    ViewData["Title"] = "Список категорий";
    Layout = "_LayoutAdmin";
}
<div class="finish_font text-danger ml-4">@TempData["TempDataMessage"]</div>
<h3 class="search_h3">Список категорий игр</h3>
@if (Model.Count > 0)
{
    <table class="ml-3 table table-search" style="width:65%">
        <thead>
            <tr>
                <th>
                   Название категории
                </th>
                <th>               
                    Url Slug
                </th>
                <th>
               </th>
            </tr>
        </thead>
        @foreach (CategoryModel category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>@category.CategoryUrlSlug</td>
                <td class="text-right" style="width:130px;">
                   <a asp-controller="admin" asp-action="confirmdeletecategory" asp-route-categoryId="@category.CategoryId">
                        Удалить
                    </a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <div class="finish_font mt-5 mb-2 ml-4">Все категории удалены</div>
} 