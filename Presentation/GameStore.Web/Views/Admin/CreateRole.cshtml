@model CreateRoleViewModel
@{
    ViewData["Title"] = "Создать роль";
    Layout = "_LayoutAdmin";
}
<h3 class="search_h3">Создать новую роль</h3>
<form asp-controller="admin" asp-action="createrole" method="post" class="mt-3 form-location">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group mr-5 mb-3">
        <label asp-for="RoleName" class="col-form-label"></label>
        <input asp-for="RoleName" class="form-control input-width" title="Название" placeholder="Название" />
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-success" style="width:auto">
                Создать
            </button>
        </div>
    </div>
</form>