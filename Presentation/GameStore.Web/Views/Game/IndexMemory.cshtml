@model GameModel
@{
    ViewData["Title"] = "Index";
}
<h3>Информация об игре</h3>
<table class="table" style="width:800px;">
    <thead>
        <tr>
            <th>Название игры </th>
            <th>Производитель</th>
            <th>Жанр</th>
            <th class="text-right">Дата выхода игры</th>
            <th>Цена</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                <strong>@Html.DisplayFor(modelItem => modelItem.Name)</strong>
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Publisher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => modelItem.Category)
            </td>
            <td class="text-right">
                @Html.DisplayFor(modelItem => modelItem.ReleaseDate)
            </td>
            <td>
                @Math.Truncate(Model.Price) &#8381;
            </td>
        </tr>

    </tbody>
</table>
<div class="float-left mr-4">
    @if (Model.ImageData != null)
    {
        <img style="width:220px;" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.ImageData))" />
    }
</div>
<div class ="text-justify">
    @Model.Description
</div>
<form style="margin-top:20px;" asp-controller="order" asp-action="additem" asp-route-returnUrl="@Context.Request.GetCurrentUrl()" method="post">
    <input type="hidden" name="gameId" value="@Model.GameId" />
    <button class="btn btn-success" type="submit">В корзину</button>
</form>